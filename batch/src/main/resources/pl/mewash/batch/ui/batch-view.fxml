<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fitToWidth="true"
            fx:controller="pl.mewash.batch.ui.BatchController">
    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20;">

        <HBox spacing="10" alignment="CENTER">
            <Label text="%label.paste_urls"/>
            <Label text="❓">
                <tooltip>
                    <Tooltip text="%tooltip.paste_url"/>
                </tooltip>
            </Label>
        </HBox>

        <TextArea fx:id="urlInput" prefRowCount="14" wrapText="true">
            <tooltip>
                <Tooltip text="%tooltip.paste_url"/>
            </tooltip>
        </TextArea>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="%label.save_to_dir"/>
            <TextField fx:id="pathField" prefWidth="300"/>
            <Button text="%button.browse_dirs" onAction="#handleBrowse"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label style="-fx-font-weight: bold;" text="Video: "/>
            <CheckBox fx:id="maximumMP4checkbox" text="%label.checkbox.video.2160"/>
            <CheckBox fx:id="highMP4checkbox" text="%label.checkbox.video.1440"/>
            <CheckBox fx:id="standardMP4checkbox" text="%label.checkbox.video.1080"/>
            <CheckBox fx:id="compactMP4checkbox" text="%label.checkbox.video.720"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label style="-fx-font-weight: bold;" text="Audio: "/>
            <CheckBox fx:id="m4aHqCheckbox" text="%label.checkbox.audio.m4ahq"/>
            <CheckBox fx:id="m4aCompressedCheckbox" text="%label.checkbox.audio.m4asm"/>
            <CheckBox fx:id="mp3HqCheckbox" text="%label.checkbox.audio.mp3"/>
            <CheckBox fx:id="wavNewCheckbox" text="%label.checkbox.audio.wav"/>
            <CheckBox fx:id="nativeCheckbox" text="%label.checkbox.audio.original"/>
        </HBox>

        <TitledPane text="%menu.advanced_options" expanded="false">
            <VBox spacing="10" style="-fx-padding: 10;">

                <fx:define>
                    <ToggleGroup fx:id="downloadSelection"/>
                    <ToggleGroup fx:id="structureSelection"/>
                    <ToggleGroup fx:id="multithreadingSelection"/>
                </fx:define>

                <Label text="%label.download_type" style="-fx-font-weight: bold;"/>
                <FlowPane hgap="20" vgap="8">

                    <!-- Additional files -->
                    <RadioButton fx:id="fileOnlyRadio" toggleGroup="$downloadSelection"
                                 text="%label.download.file_only_radio">
                        <tooltip>
                            <Tooltip text="%tooltip.download.file_only_radio"/>
                        </tooltip>
                    </RadioButton>
                    <RadioButton fx:id="fileWithDescRadio" toggleGroup="$downloadSelection"
                                 text="%label.download.file_with_desc_radio">
                        <tooltip>
                            <Tooltip text="%tooltip.download.file_with_desc_radio"/>
                        </tooltip>
                    </RadioButton>
                    <RadioButton fx:id="fileWithMetadataRadio" toggleGroup="$downloadSelection"
                                 text="%label.download.file_with_metadata_radio">
                        <tooltip>
                            <Tooltip text="%tooltip.download.file_with_metadata_radio"/>
                        </tooltip>
                    </RadioButton>
                </FlowPane>

                <Separator/>

                <!-- Grouping mode -->
                <Label text="%label.grouping_selection" style="-fx-font-weight: bold;"/>
                <FlowPane hgap="20" vgap="8">
                    <RadioButton fx:id="noGroupingRadio" toggleGroup="$structureSelection"
                                 text="%label.grouping.no_grouping">
                        <tooltip>
                            <Tooltip text="%tooltip.grouping.no_grouping"/>
                        </tooltip>
                    </RadioButton>
                    <RadioButton fx:id="groupByContentRadio" toggleGroup="$structureSelection"
                                 text="%label.grouping.by_content">
                        <tooltip>
                            <Tooltip text="%tooltip.grouping.by_content"/>
                        </tooltip>
                    </RadioButton>
                    <RadioButton fx:id="groupByFormatRadio" toggleGroup="$structureSelection"
                                 text="%label.grouping.by_format">
                        <tooltip>
                            <Tooltip text="%tooltip.grouping.by_format"/>
                        </tooltip>
                    </RadioButton>
                </FlowPane>

                <Separator/>

                <!-- Add date dir -->
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <CheckBox fx:id="addDateCheckbox" text="%label.add_date_checkbox">
                        <tooltip>
                            <Tooltip text="%tooltip.add_date_checkbox"/>
                        </tooltip>
                    </CheckBox>
                </HBox>

                <Separator/>

                <!-- Multithreading -->
                <HBox spacing="5">
                    <Label text="%label.multithreadingSelection" style="-fx-font-weight: bold;"/>
                </HBox>

                <HBox spacing="3">
                    <RadioButton fx:id="singleThreadRadio"
                                 toggleGroup="$multithreadingSelection"/>
                    <Label style="-fx-font-weight: bold;"
                           text="%label.multithreading.single.prefix"/>
                    <Label text="%label.multithreading.single.suffix"/>
                    <Label text="❓">
                        <tooltip>
                            <Tooltip text="%tooltip.multithreading.single"/>
                        </tooltip>
                    </Label>
                </HBox>

                <HBox spacing="3">
                    <RadioButton fx:id="lowThreadsRadio"
                                 toggleGroup="$multithreadingSelection"/>
                    <Label style="-fx-font-weight: bold;"
                           text="%label.multithreading.low.prefix"/>
                    <Label text="%label.multithreading.low.suffix"/>
                    <Label text="❓">
                        <tooltip>
                            <Tooltip text="%tooltip.multithreading.low"/>
                        </tooltip>
                    </Label>
                </HBox>

                <HBox spacing="3">
                    <RadioButton fx:id="mediumThreadsRadio"
                                 toggleGroup="$multithreadingSelection"/>
                    <Label style="-fx-font-weight: bold;"
                           text="%label.multithreading.medium.prefix"/>
                    <Label text="%label.multithreading.medium.suffix"/>
                    <Label text="❓">
                        <tooltip>
                            <Tooltip text="%tooltip.multithreading.medium"/>
                        </tooltip>
                    </Label>
                </HBox>

                <HBox spacing="3">
                    <RadioButton fx:id="maximumThreadsRadio"
                                 toggleGroup="$multithreadingSelection"/>
                    <Label style="-fx-font-weight: bold;"
                           text="%label.multithreading.maximum.prefix"/>
                    <Label text="%label.multithreading.maximum.suffix"/>
                    <Label text="❓">
                        <tooltip>
                            <Tooltip text="%tooltip.multithreading.maximum"/>
                        </tooltip>
                    </Label>
                </HBox>

            </VBox>
        </TitledPane>

        <Button fx:id="batchButton" text="%button.start_batch"
                onAction="#handleBatchButtonActions">
            <tooltip>
                <Tooltip text="%tooltip.start_batch"/>
            </tooltip>
        </Button>

        <Label fx:id="progressLabel" text="Progress will show here"/>

        <TextArea fx:id="outputLog" editable="false" wrapText="true" prefRowCount="14"/>
    </VBox>
</ScrollPane>
